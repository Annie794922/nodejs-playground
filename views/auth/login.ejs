<!-- 為了讓專案架構更符合 MVC 架構，將原本在 views 資料夾的 login 模板，移動到 views/auth 資料夾下 -->

<%- include('../includes/header') %>
</head>
<body>
    <%- include('../includes/navbar') %>
    <div class="container-md mt-3">
        <div class="row justify-content-center">
            <div class="col-8 text-center">
                <h1>Login SKOOB</h1>
            </div>
            <% if (errorMessage) { %>
              <div class="col-8">
                <div class="alert alert-danger" role="alert">
                  <%= errorMessage %>
                </div>
              </div>
            <% } %>
            <div class="col-8">
                <form class="row g-3 needs-validation" action="/login" method="POST">
                    <div>
                      <label for="email" class="form-label">Email</label>
                      <input type="email" class="form-control" id="email" name="email" value="123@test.com">
                    </div>

                    <div>
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control" id="password" name="password" value="11111111">
                    </div>

                    <div>
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <!-- csrfToken套件的name是依套件規範給的值(_的部分)，要經過csrfToken加密保護的區塊都要放<%= csrfToken %> -->
                      <button class="btn btn-primary" type="submit">Login</button>
                    </div>
                  </form>
            </div>
        </div>
    </div>

    <%- include('../includes/footer') %>
